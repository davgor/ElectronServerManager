{
  "appId": "com.electronservermanager.app",
  "productName": "Electron Server Manager",
  "files": ["dist/main/**/*", "dist/renderer/**/*", "node_modules/**/*"],
  "directories": {
    "output": "release",
    "buildResources": "assets"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "mac": {
    "target": ["dmg", "zip"]
  },
  "linux": {
    "target": ["AppImage", "deb"]
  }
}
