{
  "name": "electron-server-manager",
  "version": "1.0.6",
  "description": "Electron Server Manager Application",
  "main": "dist/main/main.js",
  "homepage": "./",
  "author": {
    "name": "Electron Server Manager Contributors",
    "email": "davgor4@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "start": "npm run electron-build && cross-env NODE_ENV=development concurrently \"npm run electron\" \"npm run dev\"",
    "electron": "wait-on http://localhost:5173 && electron .",
    "dev": "vite",
    "build": "vite build",
    "electron-build": "tsc -p tsconfig.main.json",
    "electron-dev": "tsc -p tsconfig.main.json --watch",
    "dist": "npm run build && npm run electron-build && electron-builder",
    "dist-dev": "npm run build && npm run electron-build && electron-builder --dir",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "deadcode": "npx -y ts-prune --project tsconfig.json",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "type-check": "tsc --noEmit",
    "pretest": "npm run electron-build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install"
  },
  "dependencies": {
    "electron-is-dev": "^3.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.0",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-jest": "^29.1.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
